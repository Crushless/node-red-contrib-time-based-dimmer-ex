{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [ "./**/*.ts" ],
  "exclude": [ "node_modules" ]
}
